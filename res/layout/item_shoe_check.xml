<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/bg_shoe_check">
    <TextView
        android:id="@+id/textViewShoeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shoe Check"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
    <TextView
        android:id="@+id/textViewShoeAdvice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wear waterproof shoes"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/textViewShoeCondition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wet conditions expected"/>
</LinearLayout> 